{% extends 'DalilakVenueBundle:Layouts:base.html.twig' %}

{% block title %}Category edit{% endblock %}
{% block scripts %}{{parent()}}{% endblock %}
{% block styles %}{{parent()}}{% endblock %}

{% block content -%}
    <h1>Category edit</h1>


    <form action="{{path('category_update', {'id':app.request.attributes.get('id')})}}" {{ form_enctype(edit_form)}} style="height: 400px;padding: 70px" method="post" role="form" class="form-horizontal col-md-12">
        <input type="hidden" name="_method" value="PUT">
        <div class="form-group">
            {{form_label(edit_form.title, 'Title')}}
            {{form_widget(edit_form.title, {'attr':{'class':'form-control'}})}}
        </div>

        <div class="form-group">
            {{form_label(edit_form.title_ar, 'Arabic title')}}
            {{form_widget(edit_form.title_ar, {'attr':{'class':'form-control'}})}}
        </div>

        <div class="form-group">
            {{form_label(edit_form.alias, 'Alias')}}
            {{form_widget(edit_form.alias, {'attr':{'class':'form-control'}})}}
        </div>

        {{form_widget(edit_form._token)}}
        <button class="btn btn-primary">Update</button>
    </form>    



    <ul class="record_actions">
        <li>
            <a href="{{ path('category') }}">
                Back to the list
            </a>
        </li>
        <li>{{ form(delete_form) }}</li>
    </ul>
{% endblock %}
