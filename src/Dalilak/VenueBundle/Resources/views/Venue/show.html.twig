{% extends 'DalilakVenueBundle:Layouts:base.html.twig' %}

{% block title %}List venues{% endblock %}
{% block scripts %}{{parent()}}{% endblock %}
{% block styles %}{{parent()}}{% endblock %}

{% block content -%}
    <h1>Venue</h1>

    <table class="records_list table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Namear</th>
                <td>{{ entity.nameAr }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ entity.email }}</td>
            </tr>
            <tr>
                <th>Facebook</th>
                <td>{{ entity.facebook }}</td>
            </tr>
            <tr>
                <th>Twitter</th>
                <td>{{ entity.twitter }}</td>
            </tr>
            <tr>
                <th>Website</th>
                <td>{{ entity.website }}</td>
            </tr>
            <tr>
                <th>Openingtimes</th>
                <td>{{ entity.openingTimes }}</td>
            </tr>
            <tr>
                <th>Offers</th>
                <td>{{ entity.offers }}</td>
            </tr>
            <tr>
                <th>Services</th>
                <td>{{ entity.services }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('venue') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('venue_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
