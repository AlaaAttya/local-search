{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Venue list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Namear</th>
                <th>Email</th>
                <th>Facebook</th>
                <th>Twitter</th>
                <th>Website</th>
                <th>Openingtimes</th>
                <th>Offers</th>
                <th>Services</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('venue_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.nameAr }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.facebook }}</td>
                <td>{{ entity.twitter }}</td>
                <td>{{ entity.website }}</td>
                <td>{{ entity.openingTimes }}</td>
                <td>{{ entity.offers }}</td>
                <td>{{ entity.services }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('venue_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('venue_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('venue_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
