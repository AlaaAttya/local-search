{% extends 'DalilakVenueBundle:Layouts:base.html.twig' %}

{% block title %}Edit Offer{% endblock %}
{% block scripts %}{% endblock %}

{% block content %}
    <h1>Offer edit</h1>

    <form action="{{path('offer_update', {'id':app.request.attributes.get('id')})}}" {{ form_enctype(edit_form)}} style="min-height: 2400px;height: 100%;padding: 70px" method="post" role="form" class="form-horizontal col-md-12">
    	<input type="hidden" name="_method" value="PUT">
    	<div class="form-group">
            {{form_label(edit_form.title, 'Title')}}
            {{form_widget(edit_form.title, {'attr':{'class':'form-control'}})}}
        </div>

        <div class="form-group">
            {{form_label(edit_form.imageFile, 'Image')}}
            {{form_widget(edit_form.imageFile, {'attr':{'class':'form-control'}})}}
        </div>

        <div class="form-group">
            {{form_label(edit_form.title_ar, 'Arabic Title')}}
            {{form_widget(edit_form.title_ar, {'attr':{'class':'form-control'}})}}
        </div>

        <div class="form-group">
            {{form_label(edit_form.validDate, 'Valide until')}}
            {{form_widget(edit_form.validDate, {'attr':{'class':'form-control'}})}}
        </div>

        <div class="form-group">
            {{form_label(edit_form.description, 'Description')}}
            {{form_widget(edit_form.description, {'attr':{'class':'form-control editor'}})}}
        </div>

        <div class="form-group">
            {{form_label(edit_form.description_ar, 'Arabic Description')}}
            {{form_widget(edit_form.description_ar, {'attr':{'class':'form-control editor'}})}}
        </div>

        {{form_widget(edit_form._token)}}
        <button class="btn btn-primary">Update</button>
    </form>

    <ul class="record_actions">
	    <li>
	        <a href="{{ path('offer') }}">
	            Back to the list
	        </a>
	    </li>
    	<li>{{ form(delete_form) }}</li>
	</ul>
{% endblock %}
