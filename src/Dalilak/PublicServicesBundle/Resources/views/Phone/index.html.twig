{% extends 'DalilakVenueBundle:Layouts:base.html.twig' %}

{% block title %}List Phone Numbers{% endblock %}
{% block scripts %}{{parent()}}{% endblock %}
{% block styles %}{{parent()}}{% endblock %}

{% block content -%}
    <h1>Phone list</h1>

    <table class="records_list table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Number</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('phone_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.number }}</td>
                <td>
                <ul>
                    <li class="action-align">
                        <a href="{{ path('phone_show', { 'id': entity.id }) }}" class="btn btn-primary">show</a>
                    </li>
                    <li class="action-align">
                        <a href="{{ path('phone_edit', { 'id': entity.id }) }}" class="btn btn-success">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('phone_new') }}"  class="btn btn-primary">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
