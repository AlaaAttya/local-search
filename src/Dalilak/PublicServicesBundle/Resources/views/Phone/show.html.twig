{% extends 'DalilakVenueBundle:Layouts:base.html.twig' %}

{% block title %}Show Phone{% endblock %}
{% block scripts %}{{parent()}}{% endblock %}
{% block styles %}{{parent()}}{% endblock %}

{% block content -%}
    <h1>Phone</h1>

    <table class="records_list table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ entity.title }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ entity.number }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('phone') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('phone_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
