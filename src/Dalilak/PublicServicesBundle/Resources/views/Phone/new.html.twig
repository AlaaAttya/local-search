{% extends 'DalilakVenueBundle:Layouts:base.html.twig' %}

{% block title %}New Phone{% endblock %}
{% block scripts %}{{parent()}}{% endblock %}
{% block styles %}{{parent()}}{% endblock %}

{% block content -%}
    <h1>Phone creation</h1>

    <form action="{{path('phone_create')}}" {{ form_enctype(form)}} style="height: 700px;padding: 70px" method="post" role="form" class="form-horizontal col-md-12">
        <div class="form-group">
            {{form_label(form.title, 'Title')}}
            {{form_widget(form.title, {'attr':{'class':'form-control'}})}}
        </div>

        <div class="form-group">
            {{form_label(form.title_ar, 'Arabic Title')}}
            {{form_widget(form.title_ar, {'attr':{'class':'form-control'}})}}
        </div>

        <div class="form-group">
            {{form_label(form.number, 'Number')}}
            {{form_widget(form.number, {'attr':{'class':'form-control'}})}}
        </div>

        <div class="form-group">
            {{form_label(form.categories, 'Categories')}}
            {{form_widget(form.categories, {'attr':{'class':'form-control'}})}}
        </div>

        {{form_widget(form._token)}}
        <button class="btn btn-primary">Create</button>
    </form>

        <ul class="record_actions">
    <li>
        <a href="{{ path('phone') }}">
            Back to the list
        </a>
    </li>
</ul>
{% endblock %}
